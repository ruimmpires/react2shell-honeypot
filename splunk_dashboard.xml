<dashboard version="1.1" theme="dark">
  <label>React2Shell Honeypot Activity</label>
  <description>Real-time monitoring of CVE-2025-55182 exploitation attempts.</description>
  
  <fieldset submitButton="false">
    <input type="time" token="time_tok">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>

  <row>
    <panel>
      <single>
        <title>Total Probes (Stage 1)</title>
        <search>
          <query>source="*honeypot.json*" event_id="STAGE_1_PROBE" | stats count</query>
          <earliest>$time_tok.earliest$</earliest>
          <latest>$time_tok.latest$</latest>
        </search>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0x53a051","0xf8be34"]</option>
        <option name="rangeValues">[0]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>RCE Attempts (Stage 2)</title>
        <search>
          <query>source="*honeypot.json*" event_id="RCE_ATTEMPT_DETECTED" | stats count</query>
          <earliest>$time_tok.earliest$</earliest>
          <latest>$time_tok.latest$</latest>
        </search>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0x53a051","0xdc4e41"]</option>
        <option name="rangeValues">[0]</option>
        <option name="useColors">1</option>
        <option name="underLabel">CRITICAL ALERTS</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Unique Attackers</title>
        <search>
          <query>source="*honeypot.json*" event_id=* | stats dc(network.src_ip)</query>
          <earliest>$time_tok.earliest$</earliest>
          <latest>$time_tok.latest$</latest>
        </search>
        <option name="useColors">0</option>
      </single>
    </panel>
  </row>

  <row>
    <panel>
      <chart>
        <title>Attack Volume Over Time</title>
        <search>
          <query>source="*honeypot.json*" event_id=* | timechart count by event_id</query>
          <earliest>$time_tok.earliest$</earliest>
          <latest>$time_tok.latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.legend.placement">bottom</option>
      </chart>
    </panel>
    <panel>
      <map>
        <title>Attacker Geolocation</title>
        <search>
          <query>source="*honeypot.json*" event_id=* | iplocation network.src_ip | geostats count by event_id</query>
          <earliest>$time_tok.earliest$</earliest>
          <latest>$time_tok.latest$</latest>
        </search>
        <option name="mapping.type">marker</option>
        <option name="height">300</option>
      </map>
    </panel>
  </row>

  <row>
    <panel>
      <table>
        <title>Captured Malware Payloads (Stage 2)</title>
        <search>
          <query>source="*honeypot.json*" event_id="RCE_ATTEMPT_DETECTED" 
| table @timestamp, network.src_ip, threat_intel.command_detected, payload.ioc_extracted 
| rename network.src_ip as "Attacker IP", payload.ioc_extracted as "Malware URL", threat_intel.command_detected as "Command"</query>
          <earliest>$time_tok.earliest$</earliest>
          <latest>$time_tok.latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</dashboard>
